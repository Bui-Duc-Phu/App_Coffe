<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="15sp"
    android:background="@drawable/item_order_manager_ad"
    android:layout_marginStart="10dp"
    android:paddingBottom="10dp"
    android:layout_marginEnd="10dp"
    android:paddingTop="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Bùi Đức Phú"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        />


    <TextView
        android:id="@+id/SumQuantityOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Tổng 30 đơn"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:textStyle="italic|bold"
        android:layout_below="@id/userName"
        />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="phuhk9@gmail.com"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_below="@id/SumQuantityOrder"
        android:layout_marginStart="15dp"
        />


    <TextView
        android:id="@+id/orderNotComplete"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="20 đơn Chưa xác thực"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"

        />

    <TextView
        android:id="@+id/OrderBeDeliever"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderNotComplete"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="20 đơn dang thực hiện"
        android:textColor="@color/Xanhduong"
        android:textSize="15dp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/orderComplete"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="20 đơn dang thực hiện"
        android:textColor="@color/Xanhla"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/OrderBeDeliever"
        android:layout_marginEnd="20dp"

        />









</RelativeLayout>