<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="10dp"
    android:background="@color/white"
    android:paddingEnd="10dp"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_green"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/tiltleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detailed orders"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:layout_below="@id/btnBack"
        android:textColor="#EF683D"
        />




    <LinearLayout
        android:id="@+id/id_pay_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tiltleTv"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/IDTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: #022345010"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />
        <TextView
            android:id="@+id/payTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="Paid"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/date_time_layout"
        android:layout_width="match_parent"
        android:layout_below="@id/id_pay_layout"
        android:paddingStart="20dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày: 31/01/2024"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Thời gian: 8:00"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/product_recylerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_time_layout"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        tools:listitem="@layout/product_in_order_item"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />
    <LinearLayout
        android:id="@+id/shiper_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/product_recylerview"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="start"
        >
        <ImageView
            android:id="@+id/truckImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/truck"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/shiperTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:maxLines="2"
            android:text="Shipper : Nguyễn Văn A\nSĐT : 0947945596"
            android:textSize="16dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/sumPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shiper_layout"
        android:layout_marginTop="10sp"
        android:textSize="20dp"
        android:text="Tổng : 35.000"
        android:textColor="@color/black"
       android:layout_alignParentEnd="true"
        android:textStyle="bold"

        android:layout_marginEnd="30dp"
        />
    <TextView
        android:id="@+id/receiverPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SĐT người nhận : 0332634787"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/sumPrice"
        android:layout_marginStart="10dp"
        android:textSize="16dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/receiverEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email : Phuhk3@gmail.com"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_below="@id/receiverPhone"
        android:layout_marginStart="10dp"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/receiverLocation"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Địa chỉ : 97/man thiện Quân 9"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@id/receiverEmail"
        android:layout_marginStart="10dp"
        android:textSize="16dp"
        />










</RelativeLayout>